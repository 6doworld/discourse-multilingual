<div class="control-group pref-content-languages">
  <label class='control-label'>{{i18n 'user.content_languages.title'}}</label>
  <div class="controls content-languages-selector-container">
    {{content-languages-selector content=model.contentLanguages
                                 values=model.custom_fields.content_languages
                                 valueAttribute="code"
                                 none="user.content_languages.placeholder"}}
